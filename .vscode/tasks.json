{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Format and Lint",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "format:lint"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Format",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "format"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "Lint",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "lint"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "Lint Fix",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "lint:fix"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": ["$eslint-stylish"]
		}
	]
}
